<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<wps:Execute service="WPS"
             version="1.0.0"
             xmlns:wps="http://www.opengis.net/wps/1.0.0"
             xmlns:ows="http://www.opengis.net/ows/1.1"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <ows:Identifier>CellL3</ows:Identifier>

    <wps:DataInputs>
        <wps:Input>
            <ows:Identifier>productionName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>example level3 05_celll3_weekly-from-daily</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>inputPath</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/examples/level3/00_l3_daily-L3-[1-4]</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>calvalus.output.dir</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/examples/level3/05_celll3_weekly-from-daily</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>minDate</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>2010-03-01</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>maxDate</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>2010-03-04</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.cell.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <aggregators>
                            <aggregator>
                                <type>MIN_MAX</type>
                                <varName>ndvi_mean</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>radiance_13_mean</varName>
                            </aggregator>
                        </aggregators>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.output.format</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>NetCDF4-BEAM</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>calvalus.output.prefix</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>05_celll3_weekly</wps:LiteralData>
            </wps:Data>
        </wps:Input>

    </wps:DataInputs>
</wps:Execute>
